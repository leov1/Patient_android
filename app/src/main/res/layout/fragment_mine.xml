<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_footer_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/settingTopbar"
                android:orientation="vertical"
                android:visibility="visible">


                <RelativeLayout
                    android:id="@+id/rlItemUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/imgUserHead"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:src="@mipmap/women" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="24dp"
                        android:layout_toRightOf="@id/imgUserHead"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="马萍"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textName"
                            android:layout_marginBottom="24dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textSex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="女"
                                android:textColor="#6e6e6e"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:text="31岁"
                                android:textColor="#6e6e6e"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/imgEnter"
                        style="@style/MineItemRightImageView"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="21dp" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlUserLogin"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:clickable="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgUserHeadUnLogin"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:src="@mipmap/women" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@id/imgUserHeadUnLogin"
                    android:text="登录\\注册"
                    android:textColor="#6e6e6e"
                    android:textSize="20sp" />

                <ImageView
                    style="@style/MineItemRightImageView"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="21dp" />

            </RelativeLayout>

        </RelativeLayout>

        <View style="@style/viewLineStyle" />

        <LinearLayout
            android:id="@+id/llItemMyQuestion"
            style="@style/MainItemStyle"
            android:layout_marginTop="20dp">

            <ImageView
                style="@style/MineItemLeftImageView"
                android:src="@mipmap/myquestion" />

            <TextView
                android:id="@+id/textMyQuestion"
                style="@style/MineItemTextView"
                android:text="我的提问" />

            <ImageView
                android:id="@+id/imgMyQuestionMore"
                style="@style/MineItemRightImageView" />
        </LinearLayout>

        <View style="@style/viewLineStyle" />

        <LinearLayout
            android:id="@+id/llItemMyDoctor"
            style="@style/MainItemStyle">

            <ImageView
                style="@style/MineItemLeftImageView"
                android:src="@mipmap/mydoctor" />

            <TextView
                android:id="@+id/textMyDoctor"
                style="@style/MineItemTextView"
                android:text="我的医生" />

            <ImageView
                android:id="@+id/imgMyDoctorMore"
                style="@style/MineItemRightImageView" />
        </LinearLayout>

        <View style="@style/viewLineStyle" />

        <LinearLayout
            android:id="@+id/llItemMyCollection"
            style="@style/MainItemStyle">

            <ImageView
                style="@style/MineItemLeftImageView"
                android:src="@mipmap/mycollection" />

            <TextView
                android:id="@+id/textMyCollection"
                style="@style/MineItemTextView"
                android:text="我的收藏" />

            <ImageView
                android:id="@+id/imgMyCollectionMore"
                style="@style/MineItemRightImageView" />
        </LinearLayout>

        <View style="@style/viewLineStyle" />


        <LinearLayout
            android:id="@+id/llItemFeedback"
            style="@style/MainItemStyle">

            <ImageView
                style="@style/MineItemLeftImageView"
                android:src="@mipmap/feedback" />

            <TextView
                android:id="@+id/textFeedback"
                style="@style/MineItemTextView"
                android:text="意见反馈" />

            <ImageView
                android:id="@+id/imgMyFeedback"
                style="@style/MineItemRightImageView" />
        </LinearLayout>


        <View style="@style/viewLineStyle" />

        <LinearLayout
            android:id="@+id/llItemMySettion"
            style="@style/MainItemStyle">

            <ImageView
                style="@style/MineItemLeftImageView"
                android:src="@mipmap/mysetting" />

            <TextView
                android:id="@+id/textMySetting"
                style="@style/MineItemTextView"
                android:text="我的设置" />

            <ImageView
                android:id="@+id/imgMySettingMore"
                style="@style/MineItemRightImageView" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:gravity="center"
        android:text="客服电话：400-1358858"
        android:textColor="#dadada"
        android:textSize="14sp" />
</RelativeLayout>

